{% for name, plan in pricing %}
<div class="plan text-secondary {% if name != "Pro" %}mt-10 round-xl{% endif %}">
  <div class="md:grid md:grid-cols-4 md:gap-1 lg:grid-cols-1 relative">
    <div class="hidden absolute {% if name == "Enterprise" %}-top-28{% else %}-top-20{% endif %} right-0 sm:block w-36">
      {%  image  plan.img,plan.alt %}
    </div>
    <div class="md:col-span-6 lg:col-span-2">
      <div class="title font-small">{{ name }}</div>
      <div class="price {% if name == "Pro" %}mb-2{% endif %}"><h3 class="font-sans font-semibold text-4xl">â‚¬{{ plan.price }}<small class="text-gray-500 text-sm font-light">/per
            {{ plan.time_unit }}(or {% if plan.time_unit == "month" %}<a class="underline" href="/pricing-yearly">yearly</a>{% else %}<a class="underline" href="/pricing">monthly</a>{% endif %})</small></h3>
      </div>

      {% if name == "Pro" %}
        <span>Prefered choice</span>
      {% endif %}

    </div>
    <div class="md:col-span-6">
    <div class="rounded-lg bg-secondary text-center mx-3 col">
      <a href="https://app.sitefig.eu/signup/{{plan.lookup_id}}" class="text-white block">Start free trial</a>
    </div>
    </div>
  </div>

  <div class="modules text-sm mx-3">
    <p class="md:inline">Includes modules:</p>
    <ul class="list-none md:inline">
      {% for module in plan.active_modules %}
        <li class="inline px-3 rounded-lg text-center text-primary bg-orange-100">{{ module }}</li>
      {% endfor %}
      {% for e in plan.excluded_modules %}
        <li class="inline px-3 rounded-lg text-center text-gray-400 bg-gray-100">{{ e }}</li>
      {% endfor %}
    </ul>
  </div>
  <div class="features mx-3 text-sm">
    <div class="bg-label feature flex justify-between">
      <div class="label">Websites</div>
      <div class="text-right"><span class="font-semibold font-sans">{{ plan.websites }}</span></div>
    </div>
    <div class="feature flex justify-between">
      <div class="label">Crawl budget</div>
      <div class="text-right"><span class="font-semibold font-sans">{{ plan.crawling_budget }}<small>/website</small></span></div>
    </div>
    <div class="bg-label  feature flex justify-between">
      <div class="label">Crawl frequency</div>
      <div class="text-right"><span class="font-semibold font-sans">{{ plan.freq }}</span></div>
    </div>
    <div class="feature flex justify-between">
      <div class="label">On-demand</div>
      <div class="text-right"><span class="font-semibold font-sans">{{ plan.ondemand }} <small>crawl</small></span></div>
    </div>
    <div class="bg-label  feature flex justify-between">
      <div class="label">Support</div>
      <div class="text-right"><span class="font-semibold font-sans">{{ plan.support }}</span></div>
    </div>
  </div>
</div>
{%  endfor %}
