---
layout: layouts/base.njk
templateClass: tmpl-post
---
<div class="pt-4 pb-6">
<div class="px-3 py-6">
    <p class="text-gray-800 text-center text-sm">
    Posted in /{{post.tags}}/ on {{ post.date | readableDate}}
    </p>
    <h2 class="hero text-center tracking-tight">
        <a href="{{ post.slug }}" class="disabled postlist-link">{% if post.title %}{{ post.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    </h2>
</div>
<div class="content pt-4 px-4 drop-shadow-xl">
{{ post.body |safe }}
</div>
</div>
