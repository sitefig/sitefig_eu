<!doctype html>
<html lang="{{ metadata.language }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  {% block head  %}
  {% endblock %}

  {#- Uncomment this if youâ€™d like folks to know that you used Eleventy to build your site!  #}
  {#- <meta name="generator" content="{{ eleventy.generator }}"> #}

  <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
  <link rel="dns-prefetch" href="https://fonts.gstatic.com/">
  <link media="all" onload="this.media='all'" rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,900;1,700&amp;family=Poppins:wght@300;400;500;600&amp;display=swap">
</head>
<body class="bg-body text-txt">
<div>
  <div class="mx-auto">
    <header class="container mx-auto text-sm md:text-base md:flex md:justify-between md:pt-2 z-10">
      <h1 class="home flex justify-center p-3 bg-primary md:rounded">
        <a href="{{ '/' | url }}"><img src="/img/logo.svg" class="bg-primary" alt="{{ metadata.title }}"/></a>
      </h1>
      <nav class="py-3 px-0 md:px-2">
        <ul class="nav flex justify-evenly text-secondary md:pr-[48px]" role="list">
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="px-1 md:px-2 py-1 nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a
                href="{{ entry.url | url }}">{{ entry.title }}</a></li>
          {%- endfor %}
          <li class="px-1 md:px-2 py-1 nav-item">
            <a href="https://www.sitefig.net/" title="More details and info on our blog">Blog</a>
          </li>
          <li class="px-0 pr-1 inline nav-item">
      <span class="relative inline-flex motion-safe:md:fixed">
            <a href="https://app.sitefig.eu/accounts/signup/" target="_blank" rel="noopener nofollow"
               class="min-w-max inline-flex items-center px-2 py-1 leading-6 text-sm shadow rounded-md text-info bg-white dark:bg-slate-800 transition ease-in-out duration-300">
              Try it for free
            </a>
            <span class="flex absolute h-3 w-3 top-0 right-0 -mt-1 -mr-1">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-sky-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-sky-500"></span>
            </span>
          </span>
          </li>
        </ul>
      </nav>
    </header>
  </div>
</div>
<main class="mb-10 font-body {% if templateClass %}{{ templateClass }}{% endif %}">
  <div class="bg-transparent container mx-auto z-10">
    {% block body %}
    {{ content | safe }}
    {% endblock %}
  </div>
</main>


<div class="bg-footer md:bg-contain pb-64 md:pb-0 bg-bottom bg-no-repeat bg-center">
  <footer class="pb-64">
    <div class="container md:max-w-2xl mx-auto flex flex-wrap justify-center">
      <div><p class="bg-gradient-to-r from-cyan to-teal mb-14 p-6 rounded text-white">
        <a href="https://www.twitch.tv/sitefig"><img src="/img/TwitchGlitchBlackOps.svg" height="32" width="32"
                                                     class="inline mr-2"/>
          Meet us on Twitch every Friday at lunch time!</a>
      </p></div>


      <div class="md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-4">
        <div>
          <address>Sitefig SARL-S<br/>
            29, BLD Prince Henri<br/>
            L-1724 Luxembourg
          </address>
          <p>Copyright @2022</p>
        </div>
        <div>
          &nbsp;
        </div>
        <div><ul class="list-unstyled">
            <li><a href="https://sitefig.statuspage.io/">Online Status</a></li>
            <li><a href="/privacypolicy">Privacy statement</a></li>
            <li><a href="https://support.sitefig.eu/">Support</a></li>
          </ul>
          </div>
      </div>

    </div>


  </footer>
</div>
<!-- Current page: {{ page.url | url }} -->
<script async defer src="https://scripts.withcabin.com/hello.js"></script>
</body>
</html>
